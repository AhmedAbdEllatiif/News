<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_TopheadLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="5dp"
    app:contentPadding="7dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">

        <TextView
            android:id="@+id/txtTopHeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topheadline"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/img_topHeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/txtTopHeadLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtDisc_TopHeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discription"
            android:textSize="15sp"
            android:textColor="@color/txt_gray"
            app:layout_constraintTop_toBottomOf="@id/img_topHeadLine"
            app:layout_constraintStart_toStartOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>